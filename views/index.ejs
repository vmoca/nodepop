
<% include header.ejs %>
<div class="anuncios_container">
  <div class="anuncios_item">
    <%anunciosList.forEach(anuncio => {%>

    <section class="page-section">
      <div class="container">
        <div class="product-item">
          <div class="product-item-title d-flex">
            <div class="bg-fade p-5 d-flex ml-auto rounded">
              <h2 class="section-heading mb-0">
                <span class="section-heading-lower"><%= anuncio.nombre %></span>
              </h2>
            </div>
          </div>
          <img class="product-item-img mx-auto d-flex rounded img-fluid mb-3 mb-lg-0" src="../images/<%= anuncio.foto %>" alt="">
          <div class="product-item-description d-flex mr-auto">
            <div class="bg-faded p-5 rounded">
              <div class="descrip-anun">
                <span><%= type %></span>
                <%if (anuncio.venta === true){%>
                <%= sale %>
                <%}else{%>
                <%= buy %>
                <%}%>
              </div>
              <div class="descrip-anun"><span><%= price %></span> <%= anuncio.precio %> â‚¬</div>
              <div class="descrip-anun">
                <span><%= tags %></span>
                <div class="tag">
                  <%= anuncio.tags %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%})%>
  </div>
</div>

<% include footer.ejs %>